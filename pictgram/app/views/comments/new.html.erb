<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Comment Form</h1>
         
          <%= form_for @comment do |f| %>
            <div class="form-group">
              <%= f.label :comment %>
              <%= f.text_field :comment, class: "form-control"  %>
              <%= f.hidden_field :user_id, value: @comment.user_id %>
              <%= f.hidden_field :topic_id, value: @comment.topic_id %>
              <!--第一引数にオブジェクト名、第二引数部分にvalueで受け渡す値を指定する。-->
              <!--https://sakurawi.hateblo.jp/entry/hidden_field-->
              
              <% if logged_in? %>
                <%= f.submit "コメントする", class: "btn-primary" %>
              <% end %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>